<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	xmlns:grid="birdeye.vis.guides.grid.*"
	xmlns:axis="birdeye.vis.guides.axis.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
	<mx:Script>
		<![CDATA[

			import mx.collections.ArrayCollection;
			import mx.core.IToolTip;
			import mx.controls.Alert;
			import birdeye.vis.data.DataItemLayout;
			import birdeye.util.EffectsUtil;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var R1:Number, R2:Number, R3:Number, R4:Number;
				
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: R1=Math.round(Math.random() * 1000),
						R2: R2=Math.round(Math.random() * 1000),
						R3: R3=Math.round(Math.random() * 1000),
						R4: R4=Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = dataFields["dim1"] + ": " + currDatatip[dataFields["dim1"]];
				tt += '\n' + dataFields["dim2"] + ": " + currDatatip[dataFields["dim2"]];
				if (dataFields["sizeField"] != null)
					tt += '\n' + dataFields["sizeField"] + ": " + currDatatip[dataFields["sizeField"]];
				return  tt;
			}
            
		]]>
	</mx:Script>
		<mx:Button label="Generate" click="createDT()"/>
	
		<mx:VBox height="100%" width="100%" verticalAlign="middle" horizontalAlign="center" >
		
		<coords:Cartesian id="bc" width="90%" height="90%" dataProvider="{dt}" showDataTips="true" dataTipFunction="dtFunc">
			<coords:scales>
		    	<scales:Category id="c" categoryField="subject" />
		    	<scales:Linear id="l" />
			</coords:scales>
			<coords:guides>
				<axis:Axis scale="{c}" placement="left" strokeColor="#cccccc" colorPointer="0xFF0000" fontLabel="tahoma" labelColor="#cccccc" weightPointer="3" sizeLabel="9" sizePointer="12" />
				<axis:Axis scale="{l}" placement="top" strokeColor="#cccccc" colorPointer="0xFF0000" fontLabel="tahoma" labelColor="#cccccc" weightPointer="3" sizeLabel="9" sizePointer="12" />
	 		</coords:guides>
	    	 <coords:elements>
			 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="R1" dim2="subject" displayName="R1" styleName="grad1" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" />
			 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="R2" dim2="subject" displayName="R2" styleName="grad2" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" />
			 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="R3" dim2="subject" displayName="R3" styleName="grad3" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" />
			 	<elements:BarElement scale1="{l}" scale2="{c}" extendMouseEvents="true" dim1="R4" dim2="subject" displayName="R4" styleName="grad4" mouseOverFunction="EffectsUtil.setGlowEffect" mouseOutFunction="EffectsUtil.removeEffects" />
			 </coords:elements>
		</coords:Cartesian>
		
		<guides:Legend dataProvider="{bc}" direction="horizontal" />	
	
		</mx:VBox>

</mx:Module>
