<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:recipe="birdeye.vis.recipes.cartesianCharts.*"
	xmlns:coords="birdeye.vis.coords.*"
	xmlns:elements="birdeye.vis.elements.geometry.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:guides="birdeye.vis.guides.legend.*"
	backgroundColor="#3f3f3f" 
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center">

<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var R1:Number, R2:Number, R3:Number, R4:Number;
				
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: R1=Math.round(Math.random() * 1000),
						R2: R2=Math.round(Math.random() * 1000),
						R3: R3=Math.round(Math.random() * 1000),
						R4: R4=Math.round(Math.random() * 1000)
					});
				}
				dt = ac;
			}

			private function dtFunc(currDatatip:Object, dataFields:Array):String
			{
				var tt:String = "Info: " + currDatatip[dataFields[0]];
				tt += '\n' + dataFields[1] + ": " + currDatatip[dataFields[1]];
				return  tt;
			}

			private function changeForm(a:Array):void
			{
				for (var i:Number = 0; i<a.length; i++)
					if (a[i].form == "curve")
						a[i].form = "line";
					else 
						a[i].form = "curve";
			}
		]]>
	</mx:Script>
	
	
	<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle" >
    	
    	<mx:HBox >
    		<mx:Button label="Generate" click="createDT()"/>
    		<mx:CheckBox label="Curve" selected="false" click="changeForm([a1,a2,a3,a4])"/>
		</mx:HBox>
    	
    	<coords:Cartesian id="ac3" width="90%" height="90%" dataProvider="{dt}" dataTipFunction="dtFunc" showDataTips="true">
 		<coords:scales>
 			<scales:Category categoryField="subject" id="c2" placement="bottom" colorPointer="0xFF0000" fontLabel="tahoma" weightPointer="3" sizeLabel="9" sizePointer="12" />
 			<scales:Linear placement="right" rotateLabels="40" id="l2" colorPointer="0xFF0000" fontLabel="verdana" weightPointer="5" sizeLabel="10" sizePointer="15"/>
 			<scales:Linear placement="right" id="l1" colorPointer="0x00FF00" fontLabel="verdana" colorLabel="0xffffff" weightPointer="5" sizeLabel="10" sizePointer="15"/>
 		</coords:scales>
		 <coords:elements>
		 	<elements:AreaElement id="a1" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R1" styleName="grad1" strokeAlpha=".5" displayName="R1"/>
    		<elements:AreaElement id="a2" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l2}" scale1="{c2}" dim1="subject" dim2="R2" styleName="grad2" strokeAlpha=".5" displayName="R2"/>
    		<elements:AreaElement id="a3" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c2}" dim1="subject" dim2="R3" styleName="grad3" strokeAlpha=".5" displayName="R3"/>
    		<elements:AreaElement id="a4" showItemRenderer="true" itemRenderer="birdeye.vis.guides.renderers.CircleRenderer" scale2="{l1}" scale1="{c2}" dim1="subject" dim2="R4" styleName="grad4" strokeAlpha=".5" displayName="R4"/>
		 </coords:elements>
	</coords:Cartesian>

    <guides:Legend dataProvider="{ac3}" direction="horizontal"/>

	</mx:VBox>
</mx:VBox>
