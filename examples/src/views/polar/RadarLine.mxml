<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:polar="birdeye.vis.coords.*"
	xmlns:pseries="birdeye.vis.elements.geometry.*"
	xmlns:cseries="birdeye.vis.elements.*"
	xmlns:scales="birdeye.vis.scales.*"
	xmlns:legend="birdeye.vis.guides.legend.*"
	creationComplete="createDT()"
	width="100%" height="100%" horizontalAlign="center" xmlns:axis1="birdeye.vis.guides.axis.*">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			
			[Bindable]
			public var dt:ArrayCollection;;

			private var subject:Array;
			
			private function createDT():void
			{
				subject = ["A", "B", "C", "D", "E", "F"];
				var ac:ArrayCollection = new ArrayCollection();
				var ac1:ArrayCollection = new ArrayCollection();
				for (var i:Number = 0; i<subject.length; i++)
				{
					ac.addItem({
						subject: subject[i],
						R1: Math.round(Math.random() * (i+1)*10* 1000),
						R2: Math.round(Math.random() * (i+1)*10* 1000),
						R3: Math.round(Math.random() * (i+1)*10* 1000),
						R4: Math.round(Math.random() * (i+1)*10* 1000),
						R5: Math.round(Math.random() * (i+1)*10* 1000)
					});
				}
				dt = ac;
			}

			private function changeForm(a:Array):void
			{
				for (var i:Number = 0; i<a.length; i++)
					if (a[i].form == "curve")
						a[i].form = "line";
					else 
						a[i].form = "curve";
			}
		]]>
	</mx:Script>
<mx:Fade id="fadeIn" alphaFrom="0" alphaTo="1" duration="1000"/>
<mx:VBox width="100%" height="100%" horizontalAlign="center" verticalAlign="middle">
	<mx:HBox>
    		<mx:Button label="Generate" click="createDT()"/>
			<mx:CheckBox label="Curve" selected="false" click="changeForm([a1,a2,a3,a4,a5])"/>
	</mx:HBox>
		
		<polar:Polar id="rd" type="stacked" showDataTips="true" dataProvider="{dt}" width="100%" height="100%" layout="radar">
			<polar:scales>
				<scales:CategoryAngle id="c" categoryField="subject" subScale="birdeye.vis.scales.Linear"/>
			</polar:scales>
			<polar:guides>
				<axis1:MultiAxis subScale="{c}"  colorStroke="0x000000" colorLabel="0x000000" fontLabel="tahoma" sizeLabel="9" />
			</polar:guides>
			<polar:elements>
				<pseries:LineElement id="a1" scale1="{c}" styleName="solid1" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" showGraphicRenderer="true" dim1="subject" dim2="R1" displayName="R1"/>
				<pseries:LineElement id="a2" scale1="{c}" styleName="solid2" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" showGraphicRenderer="true" dim1="subject" dim2="R2" displayName="R2"/>
				<pseries:LineElement id="a3" scale1="{c}" styleName="solid3" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" showGraphicRenderer="true" dim1="subject" dim2="R3" displayName="R3"/>
				<pseries:LineElement id="a4" scale1="{c}" styleName="solid4" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" showGraphicRenderer="true" dim1="subject" dim2="R4" displayName="R4"/>
				<pseries:LineElement id="a5" scale1="{c}" styleName="solid5" graphicRenderer="birdeye.vis.guides.renderers.CircleRenderer" showGraphicRenderer="true" dim1="subject" dim2="R5" displayName="R5"/>
			</polar:elements>
		</polar:Polar>
		
	<legend:Legend dataProvider="{rd}" direction="horizontal" />
</mx:VBox>
</mx:VBox>
